 @code {

     public string ButtonContent = "Download";
     public void Begin(Syncfusion.Blazor.SplitButtons.ProgressEventArgs args)
     {
         ButtonContent = "Downloading.....";

     }
     public void Ends(Syncfusion.Blazor.SplitButtons.ProgressEventArgs args)
     {
         ButtonContent = "Download";
     }

}



<style>

    @@font-face {
        font-family: 'button-icons';
        src: url(data:application/x-font-ttf;charset=utf-8;base64,) format('truetype');
        font-weight: normal;
        font-style: normal;
    }
    .e-btn-sb-icons {
        font-family: 'button-icons';
        line-height: 1;
        font-style: normal;
        font-weight: normal;
        font-variant: normal;
        text-transform: none;
    }
    .e-download-icon::before {
        content: '\e702';
    }
    .template {
        border: 2px solid black;
        border-style: dotted;
        border-radius: 50%;
        border-top-color: transparent;
        border-bottom-color: transparent;
        height: 30px;
        width: 30px;
    }

    @@keyframes custom-rolling {
        0% {
            -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
        }

        100% {
            -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
        }
    }
    .template {
        -webkit-animation: custom-rolling 1.3s linear infinite;
        animation: custom-rolling 1.3s linear infinite;
    }
    .control_wrapper {
        width: 350px;
        margin-left: 40%;
        margin-right: 40%;
        margin-top: 15%;
        margin-bottom: 15%;
    }
	
</style>